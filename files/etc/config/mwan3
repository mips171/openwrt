config globals 'globals'
	option mmx_mask '0x3F00'

config interface 'wan'
	option enabled '1'
	list track_ip '8.8.4.4'
	list track_ip '8.8.8.8'
	list track_ip '208.67.222.222'
	list track_ip '208.67.220.220'
	option family 'ipv4'
	option reliability '1'
	option failure_interval '1'
	option recovery_interval '1'
	option up '3'
	option down '3'
	option interval '3'
	option size '8'
	option initial_state 'online'
	option track_method 'ping'
	option count '1'
	option max_ttl '60'
	option timeout '4'
	list flush_conntrack 'ifup'
	list flush_conntrack 'ifdown'
	list flush_conntrack 'connected'
	list flush_conntrack 'disconnected'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'wan_mobile'

config rule 'default_rule_v4'
	option dest_ip '0.0.0.0/0'
	option family 'ipv4'
	option proto 'all'
	option sticky '0'
	option use_policy 'wan_mobile'

config rule 'default_rule_v6'
	option dest_ip '::/0'
	option family 'ipv6'
	option proto 'all'
	option sticky '0'
	option use_policy 'wan_mobile'

config interface 'mobile'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	option track_method 'ping'
	option reliability '1'
	option count '3'
	option timeout '10'
	option interval '10'
	list track_ip '8.8.8.8'
	option down '5'
	option up '2'
	option failure_interval '5'
	option recovery_interval '10'
	option size '8'
	option max_ttl '60'
	list flush_conntrack 'ifup'
	list flush_conntrack 'ifdown'
	list flush_conntrack 'connected'
	list flush_conntrack 'disconnected'

config member 'mobdat_m1_w3'
	option interface 'mobile'
	option metric '5'
	option weight '3'

config policy 'wan_mobile'
	list use_member 'wan_m1_w3'
	list use_member 'mobdat_m1_w3'
	option last_resort 'unreachable'
